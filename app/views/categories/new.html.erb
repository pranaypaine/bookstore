<h2 class="center blue-text">Add New Category</h2>

<%= form_for @category do |f| %>

<div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :name, class:'validate', required:'yes' %>
          <%= f.label :name %>
        </div>
      </div>
      <div class="row center">
      <%= f.submit "Submit", class:'waves-effect waves-light btn red' %>
      <%= link_to "cancel", categories_path, class:'waves-effect waves-light btn red' %>
      </div>
      </form>
</div>

<% end %>