<h2 class="center blue-text">Add New Author</h2>

<%= form_for @author do |f| %>

<div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :first_name, class:'validate' %>
          <%= f.label :lirst_name %>
        </div>
      </div>
      <div class="input-field col s12">
          <%= f.text_field :last_name, class:'validate' %>
          <%= f.label :last_name %>
        </div>
      </div>
      <div class="row center">
      <%= f.submit "Submit", class:'waves-effect waves-light btn red' %>
      <%= link_to "cancel", authors_path, class:'waves-effect waves-light btn red' %>
      </div>
      </form>
</div>

<% end %>